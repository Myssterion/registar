<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_large"
    tools:context=".ui.inventory.InventoryRecordDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/padding_large">

    <Spinner
        android:id="@+id/spinner_asset_record_asset"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spinner_height"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="@dimen/margin_medium"/>

    <Spinner
        android:id="@+id/spinner_asset_record_prev_employee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spinner_height"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="@dimen/margin_medium"/>

    <Spinner
        android:id="@+id/spinner_asset_record_prev_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spinner_height"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="@dimen/margin_medium"/>

    <Spinner
        android:id="@+id/spinner_asset_record_next_employee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spinner_height"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="@dimen/margin_medium"/>

    <Spinner
        android:id="@+id/spinner_asset_record_next_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spinner_height"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="@dimen/margin_medium"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_large">

        <Button
            android:id="@+id/button_asset_record_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.2" />

        <Button
            android:id="@+id/button_asset_record_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.8" />
    </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>